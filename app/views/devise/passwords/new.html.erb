<% provide :title do %><%= t("devise_views.passwords.new.password") %><% end %>
<div class = "forget_password_page">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "shared/errors", resource: resource %>
    <h2 class = "title_all"><%= t("devise_views.passwords.new.password") %></h2>
    <div class="row">
      <div class="small-12 column">
        <%= f.email_field :email, autofocus: true,label: t("devise_views.passwords.edit.edit_password"), placeholder: t("devise_views.passwords.edit.placeholder_email"), class: "forget_password" %>

        <div class="small-12 medium-8 small-centered">
          <%= f.submit t("devise_views.passwords.edit.submit"), class: "button expanded forget_password_login" %>
        </div>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

